{
  "name": "grafana-javascript-agent",
  "version": "0.0.0",
  "description": "Monorepo for Grafana JavaScript Agent",
  "license": "Apache-2.0",
  "author": "Grafana Labs",
  "homepage": "https://github.com/grafana/grafana-javascript-agent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/grafana/grafana-javascript-agent.git"
  },
  "private": true,
  "workspaces": [
    "packages/**",
    "demo"
  ],
  "main": "index.js",
  "scripts": {
    "start": "lerna run --parallel start",
    "start:demo": "lerna run start --scope @grafana/agent-demo",
    "build": "lerna run build",
    "prepublish": "yarn build",
    "cypress": "cypress open",
    "clean": "run-s clean:*",
    "clean:packages": "lerna run --parallel clean",
    "clean:root": "rimraf .build-cache .cache .parcel-cache yarn-error.log",
    "quality": "run-p quality:circular-deps quality:test quality:lint quality:e2e",
    "quality:packages": "lerna run --parallel quality",
    "quality:test": "lerna run --parallel quality:test",
    "quality:e2e": "cypress run --headed",
    "quality:e2e:ci": "run-s quality:e2e:ci:*",
    "quality:e2e:ci:install": "cypress install",
    "quality:e2e:ci:run": "start-server-and-test start:demo http://localhost:1234 quality:e2e",
    "quality:format": "run-p quality:format:*",
    "quality:format:root": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,scss,md,yaml,yml,json}\"",
    "quality:format:packages": "lerna run --parallel quality:format",
    "quality:lint": "run-p quality:lint:*",
    "quality:lint:packages": "lerna run --parallel quality:lint",
    "quality:lint:root": "run-p quality:lint:root:*",
    "quality:lint:root:markdown": "markdownlint README.md CHANGELOG.md docs/**/*.md",
    "quality:lint:root:prettier": "prettier --check **/*.{js,jsx,ts,tsx,css,scss,md,yaml,yml,json} !packages/**/* !demo/**/*",
    "quality:circular-deps": "lerna run --parallel quality:circular-deps",
    "publish": "lerna publish",
    "git-hooks": "run-s git-hooks:*",
    "git-hooks:pre-commit": "lint-staged",
    "drone": "run-s drone:lint drone:sign",
    "drone:lint": "drone lint .drone/drone.yml --trusted",
    "drone:sign": "drone --server https://drone.grafana.net sign --save grafana/grafana-javascript-agent .drone/drone.yml"
  },
  "devDependencies": {
    "@grafana/eslint-config": "^4.0.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "cypress": "^10.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lerna": "^5.1.8",
    "lint-staged": "^13.0.3",
    "madge": "^5.0.1",
    "markdownlint": "^0.26.0",
    "markdownlint-cli": "^0.32.0",
    "npm-run-all": "^4.1.5",
    "os-browserify": "^0.3.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
