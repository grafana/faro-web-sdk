<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for all domains (for development/demo purposes) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Explicitly allow all domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">jsonplaceholder.typicode.com</domain>
        <domain includeSubdomains="true">grafana.net</domain>
        <domain includeSubdomains="true">grafana.com</domain>
    </domain-config>
</network-security-config>
